@page
@model wentylator.Pages.SettingsModel
@{
    ViewData["Title"] = "Settings";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <div class="user-info text-center">
                <img src="~/user.jpg" alt="User Avatar" class="rounded-circle">
                <h4>@User.Identity.Name</h4>
            </div>
        </div>
        <div class="col-md-9">
            <div class="settings-menu">
                <ul class="list-group">
                    <li class="list-group-item">
                        <a asp-page="/FanSettings" class="btn btn-secondary btn-block text-white" style="font-family: Georgia; font-size: 20px;">Ustawienia wentylatora</a>
                    </li>
                    <li class="list-group-item">
                        <a asp-page="/DeleteAccount" class="btn btn-secondary btn-block text-white" style="font-family: Georgia; font-size: 20px;">Usunięcie konta</a>
                    </li>
                    <li class="list-group-item">
                        <a asp-page="/PasswordChange" class="btn btn-secondary btn-block text-white" style="font-family: Georgia; font-size: 20px;">Zmiana hasła</a>
                    </li>
                    <li class="list-group-item">
                        <a asp-page="/DownloadPlots" class="btn btn-secondary btn-block text-white" style="font-family: Georgia; font-size: 20px;">Pobieranie wykresów</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>


